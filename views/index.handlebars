<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">EAT DA BURGER!</h1>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                <h2>BURGERS: </h2>
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-lg-12 text-center">
                    <p>{{this.id}}. {{this.burger_name}}</p>
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <button type="submit" class="btn btn-danger btn-sm">DEVOUR IT!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="task">
            <h2>DEVOURED: </h2>
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center enter_section">
            <p>Enter a burger you'd like to eat!</p>
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <br>
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT!</button>
            </form>
        </div>
    </div>
</div>